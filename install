#!/usr/bin/env bash

BASEDIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

ln -s "${BASEDIR}/.gitignore" ~
ln -s "${BASEDIR}/.tmux.conf" ~
ln -s "${BASEDIR}/.vim" ~
ln -s "${BASEDIR}/.vimrc" ~
ln -s "${BASEDIR}/.zsh_aliases" ~
ln -s "${BASEDIR}/.zshrc" ~
ln -s "${BASEDIR}/.inputrc" ~
ln -s "${BASEDIR}/.irbrc" ~
ln -s "${BASEDIR}/.tigrc" ~

mkdir -p ~/.zsh

ln -s "${BASEDIR}/.zsh/_git" ~/.zsh

if [[ -f /.dockerenv ]]; then
  # in a container

  ln -s "${BASEDIR}/.gitconfig.trustflight" ~/.gitconfig

  echo 'deb http://deb.debian.org/debian bookworm-backports main' >> /etc/apt/sources.list.d/backports.list

  apt-get update
  apt-get install -y zsh less
  apt-get -t bookworm-backports install -y tmux git fzf ssh
else
  # outside of a container

  ln -s "${BASEDIR}/.gitconfig" ~
  ln -s "${BASEDIR}/.zsh/_pass" ~/.zsh
fi
